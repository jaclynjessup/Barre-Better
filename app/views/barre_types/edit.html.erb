<div class="row">
  <div class="columns">
    <div class="content-box text-center">
      <% if current_user.nil? || current_user.role == "instructor" || current_user.role == "client" %>
      <h1>I'm sorry you don't have access to the page.</h1>
      <% else %>
      <h1>Edit a Barre Type</h1>

      <%= render 'form' %>
      <%= button_to "Delete Barre Type", barre_type_path(@type), method: :delete, :class => "button" %>
      <% end %>
    </div>
  </div>
</div>
