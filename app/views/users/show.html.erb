<div class="row">
  <div class="columns">
    <div class="content-box">
      <div>
        <h1><%= @user.first_name %> <%= @user.last_name %>'s profile</h1>
      </div>

    <h3>Class History:</h3>

        <ul class="accordion" data-accordion data-allow-all-closed="true">
          <li class="accordion-item is-active" data-accordion-item>
            <a href="#" class="accordion-title">Total Barre Classes</a>
              <div class="accordion-content" data-tab-content>
                <%= bar_chart @trainings.group(:name).count, colors: ["#F36B75"], label: "Total Classes" %>
              </div>
            </li>
            <a href="#" class="accordion-title">Barre Classes By Day of the Week</a>
              <div class="accordion-content" data-tab-content>
                <%= column_chart @trainings.group_by_day_of_week(:date, format: "%a").count, Decimals: false, colors: ["#B0A9B0"], label: "Total Classes" %>
              </div>
            </li>
            <a href="#" class="accordion-title">Barre Classes by Instructor</a>
              <div class="accordion-content" data-tab-content>
                <%= pie_chart @trainings.joins(:instructor).group(:full_name).count, donut: true, colors: ["#F36B75", "#FEA3A2", "#D2C9CC", "#FF8383", "#B0A9B0"] %>
              </div>
            </li>
            <a href="#" class="accordion-title">Barre Classes by Time</a>
              <div class="accordion-content" data-tab-content>
                <%= pie_chart @trainings.joins(:timeslot).group(:start_time).count, colors: ["#F36B75", "#FEA3A2", "#D2C9CC", "#FF8383", "#B0A9B0"] %>
              </div>
            </li>
          </ul>

      <div class="row">
        <div class="columns">
          <div class="callout">
            <table style="width:100%" class="hover">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Time</th>
                  <th>Class</th>
                  <th>Instructor</th>
                </tr>
              </thead>
              <tbody>
                <% @trainings.order('date').each do |training| %>
                  <tr data-link="<%= training_path(training) %>" id="show-<%= training.id %>">
                    <td><span><%= training.date.strftime("%B %d %Y") %></span></td>
                    <td><span><%= training.timeslot.start_time %> - <%= training.timeslot.end_time %></span></td>
                    <td><span><%= training.name %></span></td>
                    <td><span><%= training.instructor.full_name %></span></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
