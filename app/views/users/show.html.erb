<div class="row">
  <div class="columns">
    <div class="content-box">
      <div>
        <h1><%= @user.first_name %> <%= @user.last_name %>'s profile</h1>
      </div>

        <h3>Class History:</h3>

        <%= bar_chart @trainings.group(:name).count %>
        <%= pie_chart @trainings.group(:instructor).count %>
        <%= column_chart @trainings.group_by_day_of_week(:date, format: "%a").count %>

      <div class="row">
        <div class="columns">
          <div class="callout">
            <table style="width:100%" class="hover">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Time</th>
                  <th>Class</th>
                  <th>Instructor</th>
                </tr>
              </thead>
              <tbody>
                <% @trainings.order('date').each do |training| %>
                  <tr data-link="<%= training_path(training) %>" id="show-<%= training.id %>">
                    <td><span><%= training.date.strftime("%B %d %Y") %></span></td>
                    <td><span><%= training.timeslot.start_time %> - <%= training.timeslot.end_time %></span></td>
                    <td><span><%= training.name %></span></td>
                    <td><span><%= training.instructor.full_name %></span></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
