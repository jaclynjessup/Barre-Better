<div>
  <% if current_user.nil? || current_user.role == "client" || current_user.role == "instructor" %>
  <h1>I'm sorry you don't have access to the page.</h1>
  <% else %>
    <ul>
      <% @users.each do |user| %>
        <% if user.role == "client" %>
        <h1>All Clients of Barre Better</h1>
          <li>
            <%= user.username %> - <%= user.email %> <%= link_to "Delete #{user.username}", user, method: :delete, data: { confirm: "Are you sure?" } %>
          </li>
          <% else %>
          <h1>All Instructors of Barre Better</h1>
          <li>
            <%= user.username %> - <%= user.email %> <%= link_to "Delete #{user.username}", user, method: :delete, data: { confirm: "Are you sure?" } %>
          </li>
        <% end %>
      <% end %>
    </ul>
  <% end %>
</div>
