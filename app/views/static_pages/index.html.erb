<div class="row">
  <div class="columns">
    <div class="content-box text-center">
      <div class="row">
        <h1>Welcome Back to Barre Better!</h1>
          <div class="large-4 columns">
            <h3>You've taken </h3>
            <div class="number-circle">
            <%= @goals.count %>
            </div>
            <h3> barre classes!</h3>
          </div>
          <div class="large-4 columns">
            <% if @goals.count < 100 %>
            <h3>You're only </h3>
            <div class="number-circle">
              <%= 100 - @goals.count %>
            </div>
            <h3>classes away from 100!</h3>
            <% end %>
          </div>
          <div class="large-4 columns">
            <h3>You're signed up for </h3>
            <div class="number-circle">
              <%= @trainings.count - @goals.count %>
            </div>
            <h3> more barre classes!</h3>
          </div>
        </div>
      <%= button_to "View your Full History", user_path(current_user.id), :class => "button", method: :get %>
    </div>
  </div>
</div>
