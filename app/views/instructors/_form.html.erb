<div class="row">
  <%= form_for(@instructor) do |f| %>

  <div class="row">
    <div class="small-10 medium-6 columns">
      <%= f.label :full_name, "Full Name" %><br />
      <%= f.text_field :full_name, id:"Full Name" %>
    </div>

    <div class="small-10 medium-6 columns">
      <%= f.label :bio, "Bio" %><br />
      <%= f.text_area :bio, id:"Bio" %>
    </div>

    <div class="field">
      <%= f.label :avatar %><br />
      <%= f.file_field :avatar %>
    </div>

    <div class="small-centered">
      <%= f.submit value="Create Insturctor", :class => "button"%>
    </div>
  <% end %>
</div>
