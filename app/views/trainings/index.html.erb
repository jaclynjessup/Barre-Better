<div class="row">
  <div class="columns">
    <div class="content-box">
      <h2>Schedule for Barre Better</h2>

      <% if current_user.role == "instructor" || current_user.role == "admin" %>
        <%= button_to "Add a Class", new_training_path, :class => "button", method: :get %>
      <% end %>

      <div class="callout">
        <table style="width:100%" class="hover">
          <thead>
            <tr>
              <th>Date</th>
              <th>Time</th>
              <th>Class</th>
              <th>Instructor</th>
            </tr>
          </thead>
          <tbody>
            <% @trainings.order('date').each do |training| %>
              <tr data-link="<%= training_path(training) %>" id="show-<%= training.id %>">
                <td><span><%= training.date.strftime("%B %d %Y") %></span></td>
                <td><span><%= training.timeslot.start_time %> - <%= training.timeslot.end_time %></span></td>
                <td><span><%= training.name %></span></td>
                <td><span><%= training.instructor.full_name %></span></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
